{
    "env": {
        "node": true
    },
    "extends": [
        "./.eslintrc.standard.json"
    ],
    "overrides": [
        {
            "env": {
                "jest": true
            },
            "files": [
                "**/*.test.js",
                "**/*unit*.js"
            ],
            "plugins": [
                "jest"
            ],
            "rules": {
                "jest/no-disabled-tests": "warn",
                "jest/no-focused-tests": "error",
                "jest/no-identical-title": "error",
                "jest/prefer-to-have-length": "warn",
                "jest/valid-expect": "error"
            }
        }
    ],
    "parserOptions": {
        "parser": "babel-eslint"
    },
    "root": true,
    "rules": {
        "no-console": "off",
        "no-debugger": "error"
    }
}
